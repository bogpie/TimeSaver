<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$color:background"
    ohos:orientation="vertical">

    <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="center">

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:alignment="center">

            <Text
                ohos:id="$+id:cycleType"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:padding="8vp"
                ohos:text="Work"
                ohos:text_color="$color:accent"
                ohos:text_size="24vp"/>


            <TickTimer
                ohos:id="$+id:ticktimer"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text_size="32vp"
                ohos:visibility="hide"/>

            <Text
                ohos:id="$+id:actualTimer"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="32vp"
                ohos:text_color="$color:accent"/>

            <Button
                ohos:id="$+id:startButton"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="Start"
                ohos:text_color="$color:background"
                ohos:text_alignment="center"
                ohos:text_size="16vp"
                ohos:theme="$pattern:blueButton"
                ohos:top_margin="12vp"

                />

            <Button
                ohos:id="$+id:cancelButton"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="Cancel"
                ohos:text_color="$color:background"
                ohos:text_alignment="center"
                ohos:text_size="12vp"
                ohos:theme="$pattern:blueButton"
                ohos:top_margin="12vp"
                ohos:visibility="visible"
                />


        </DirectionalLayout>

        <RoundProgressBar
            ohos:id="$+id:roundProgressBar"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:divider_lines_enabled="true"
            ohos:layout_alignment="center"
            ohos:progress_color="$color:accent"
            ohos:progress_width="8vp"
            />
    </StackLayout>


</DirectionalLayout>